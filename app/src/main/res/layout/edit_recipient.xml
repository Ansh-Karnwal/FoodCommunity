<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#272727"
    android:layout_height="wrap_content"
    android:minWidth="325dp"
    android:minHeight="450dp">
    <ImageView
        android:id="@+id/editcloseAlert"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_gravity="right"
        android:layout_margin="10sp"
        android:background="@drawable/ic_baseline_close_24"/>

    <EditText
        android:id="@+id/editname"
        android:layout_width="match_parent"
        android:layout_margin="10sp"
        android:layout_height="wrap_content"
        android:maxLength="1000"
        android:hint="Enter name of Donation Request" />

    <EditText
        android:id="@+id/editaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:maxLength="1000"
        android:hint="Enter Your Relative Location (Ex. Zipcode)" />

    <EditText
        android:id="@+id/editfoodList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:maxLength="1000"
        android:hint="Enter Food Requests" />

    <Button
        android:id="@+id/editchooseDate"
        android:layout_width="match_parent"
        android:text="Choose A Date and Time"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:layout_margin="10sp"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/editadditionalInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:maxLength="1000"
        android:hint="Contact Information" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="match_parent"
        android:text="Edit Donation Request"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:layout_margin="10sp"
        android:layout_height="wrap_content"/>

</LinearLayout>