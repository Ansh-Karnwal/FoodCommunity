<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#272727"
    android:layout_height="wrap_content"
    android:minWidth="325dp"
    android:minHeight="450dp">
    <ImageView
        android:id="@+id/closeAlert"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_gravity="right"
        android:layout_margin="10sp"
        android:background="@drawable/ic_baseline_close_24"/>

    <EditText
        android:id="@+id/subscriptionName"
        android:layout_width="match_parent"
        android:layout_margin="10sp"
        android:layout_height="wrap_content"
        android:maxLength="1000"
        android:hint="Enter Your Free Trial Name"
        android:background="@drawable/shaped"/>

    <EditText
        android:id="@+id/startDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:maxLength="1000"
        android:hint="Enter Your Starting Date" />

    <EditText
        android:id="@+id/endDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:maxLength="1000"
        android:hint="Enter Your Ending Date" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:maxLength="1000"
        android:hint="Quick Description of Free Trial" />

    <EditText
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:maxLength="1000"
        android:hint="Link" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:text="Add Free Trial"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:layout_margin="10sp"
        android:layout_height="wrap_content"/>

</LinearLayout>